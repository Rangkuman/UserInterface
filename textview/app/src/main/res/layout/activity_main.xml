<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:text="TextView dengan jenis fort serif"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:id="@+id/textview2"
        android:fontFamily="serif"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="textview dengan ukuran font 20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview2"
        android:id="@+id/textview3"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="textview dengan bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview3"
        android:id="@+id/textview4"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:text="Textview mwnggunakan warna huruf"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview4"
        android:id="@+id/textview5"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="textview menggunakan perataan"/>


</LinearLayout>